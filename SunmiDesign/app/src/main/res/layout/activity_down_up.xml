<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lxy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/vvv"
        android:layout_width="match_parent"
        android:layout_height="60dp"/>

    <LinearLayout
        android:id="@+id/lin_head"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <View
            android:id="@+id/head"
            android:background="#da48c5"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>

        <sunmi.sunmiui.viewgraoup.TabViewPager
            android:id="@+id/tab_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
    




    <View
        android:id="@+id/v"
        android:visibility="gone"
        android:background="#CCffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/floatingActionsMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rel"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        lxy:fab_addButtonColorNormal="#2e6dd5"
        lxy:fab_addButtonColorPressed="#d0bd29"
        lxy:fab_addButtonPlusIconColor="#d83fcd"
        lxy:fab_addButtonSize="normal"
        lxy:fab_expandDirection="up"
        lxy:fab_labelStyle="@style/menu_labels_style">


        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/f1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            lxy:fab_colorNormal="@android:color/white"
            lxy:fab_colorPressed="@color/colorPrimary"
            lxy:fab_icon="@drawable/a_4"
            lxy:fab_size="mini"
            lxy:fab_title="李白" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/f2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            lxy:fab_colorNormal="@android:color/white"
            lxy:fab_colorPressed="@color/colorAccent"

            lxy:fab_icon="@drawable/a_2"
            lxy:fab_title="李商隐" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/f3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            lxy:fab_colorNormal="@android:color/white"

            lxy:fab_colorPressed="@color/colorPrimary"
            lxy:fab_icon="@drawable/a_1"
            lxy:fab_title="杜甫" />


    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent">

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/m1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/a_1" />

            <ImageView
                android:id="@+id/m2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/a_2" />

            <ImageView
                android:id="@+id/m3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/a_3" />

            <ImageView
                android:id="@+id/m4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/a_4" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
